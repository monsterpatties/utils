package sample.ui{	import flash.display.MovieClip;	import flash.display.SimpleButton;	import flash.events.MouseEvent;	import flash.text.TextField	public class InfoBox extends MovieClip{		private var startCallback:Function;		private var joinCallback:Function;		private var _mc:InfoBoxMC;				function InfoBox(startCallback:Function, joinCallback:Function){			_mc = new InfoBoxMC();			_mc.stop();						_mc.playAgain.visible = false;			_mc.playAgain.addEventListener(MouseEvent.CLICK, handleRestart)			_mc.joinGame.visible = false			_mc.joinGame.addEventListener(MouseEvent.CLICK, handleJoin)			this.startCallback = startCallback			this.joinCallback = joinCallback;		}		public function Hide(){			this.visible = false		}		public function Show(what:String, data:String = ""){			_mc.winner.visible = false			_mc.playAgain.visible = false;			_mc.joinGame.visible = false;			switch(what){				case "showWinner":{					_mc.winner.text = data					_mc.winner.visible = true				}				case "full":{}				case "waiting":{					if(data == "ok")_mc.joinGame.visible = true				}				case "tie":{					if(data == "go")_mc.playAgain.visible = true;					break;				}				default:{					_mc.playAgain.visible = true;					break;				}			}						_mc.gotoAndStop(what)			_mc.visible = true		}		private function handleRestart(e:MouseEvent){			startCallback();		}		private function handleJoin(e:MouseEvent){			joinCallback();		}	}	}